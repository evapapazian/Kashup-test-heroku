<style>

body {
  background-image : url('https://cdn.pixabay.com/photo/2015/03/16/23/21/cat-676972_960_720.jpg');
  image-repeat:no-repeat;
  background-size:cover;
  background-attachment:fixed;
  height:30em;
}

</style >


<body>


  <div class="container card card-body" style="padding-bottom:40px; border-radius:20px; background-color:white; opacity:92%; margin-top:80px; margin-bottom:80px; height:28em;">
    <div class="row">
      <div class="col-md-6 offset-md-3">

        <h2 style="padding-top:20px; padding-bottom:20px;"> Modification du PassWord </h2>


      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Send me reset password instructions" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>


</body>
