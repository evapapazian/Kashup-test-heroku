<div class="container" style="margin-top: 100px; width: 24em;" >
  <div class="card">
  <div class="card-body">
    <p><i class="fas fa-users fa-3x mx-3"></i>Utilisateurs actuel : <%= @users.count %></p>
  </div>
</div>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Date de creation</th>
      <th scope="col">Modifier</th>
      <th scope="col">Supprimer</th>
    </tr>
  </thead>
  <tbody>

<%  @users.each_with_index do |t,index| %>
    <tr>
      <th scope="row"><% index %></th>
      <td><%= t.id %></td>
      <td><%= t.first_name %></td>
      <td><%= t.last_name %></td>
      <td><%= t.email %></td>
      <td><%= t.created_at %></td>
      <td><%= link_to "Modifier", edit_admin_user_path(t), class:"btn btn-primary" %></td>
      <td><%= link_to "Supprimer", admin_user_path(t.id), class:"btn btn-danger", method: :delete, confirm: "Are you sur ?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
