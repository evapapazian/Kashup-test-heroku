<!DOCTYPE html>
<html>
  <head>
    <title>Katchup</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Fonts and icons -->
    <script src="https://kit.fontawesome.com/2f609438b2.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <!-- Fonts and icons End -->

    <%= favicon_link_tag asset_path('cat.ico') %>

  </head>

  <body>
    <%@cart = Cart.all%>
    <% if user_signed_in? %>
      <%@nombreItem = Cart.where(user_id:current_user.id)%>
    <%end%>

    <!-- NavBar -->


    <nav class="navbar navbar-expand-lg fixed-top">
    <div class="container">
      <a class="navbar-brand" href="<%= root_path %>">Katchup</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="#"><span class="sr-only">(current)</span>Catégories</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" <%=link_to "L'équipe", teams_path %> </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" <%=link_to "Nous contacter", contacts_path%> </a>
          </li>
          
          <% if user_signed_in? %>
            <li class="nav-item">
                 <a class="nav-link" href="<%=user_cart_path(current_user,1)%>">Panier <%=@nombreItem.count%></a>
            </li>
          <%end%>
          
          <li class="nav-item dropdown navbar-toggler-right">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Mes options
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
              <% if user_signed_in? %>
              <a class="dropdown-item" href="<%=user_path(current_user)%>">Mon profil</a>
              <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class:"dropdown-item"%>
              <%else%>
              <a class="dropdown-item" href="<%=new_user_session_path%>">Se connecter</a>
              <a class="dropdown-item" href="<%=new_user_registration_path%>">S'inscrire</a>
              <%end%>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- End NavBar -->


    <%= yield %>
  </body>
